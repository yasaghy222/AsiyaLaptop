<script id="procCatSource" type="text/x-handlebars-template">
    {{#each list}}
    <tr>
        <td>
            {{#if HasChild}}
            <a id="getChild" data-toggle="collapse" data-target="#{{ID}}" data-id="{{ID}}"><i class="icon-arrow-left5"></i></a>
            {{/if}}
            {{Title}}
        </td>
        <td class="text-center">
            {{#if AssignCount}}
            <span class="label label-rounded label-warning">
                {{AssignCount}}
            </span>
            {{/if}}
        </td>
        <td class="text-center">
            <ul class="icons-list">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-menu"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a id="addEdit" onclick="pageLoad('/Admin/Product/AddEditCat/{{ID}}','ویرایش دسته {{Title}}','procCat')" class="text-blue-800"><i class="icon-pencil"></i> ویرایش</a></li>
                        <li><a id="del" data-id="{{ID}}" data-hasChild="{{HasChild}}" data-assignCount="{{AssignCount}}" class="text-danger-800"><i class="icon-bin"></i>حذف</a></li>
                    </ul>
                </li>
            </ul>
        </td>
    </tr>
    <tr class="collapse bg-f8" id="{{ID}}">
        <td colspan="3">
            <table class="table datatable">
                <tbody></tbody>
            </table>
        </td>
    </tr>
    {{/each}}
</script>
<div id="dataTable">
    <table class="table datatable" id="TblProcCat">
        <thead>
            <tr>
                <th>عنوان</th>
                <th class="text-center">تعداد اختصاص</th>
                <th class="text-center">عملیات</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<div id="no-records" class="text-center hidden">
    <div class="icon-object no-border">
        <img class="img-responsive" src="~/Areas/Admin/Content/Images/notFound.png" title="notDataFound" />
    </div>
    <h5 class="text-semibold">متاسفانه رکوردی یافت نشد!</h5>
    <p class="mb-15">داده‌ای برای نمایش وجود ندارد می‌توانید از طریق دکمه ثبت مورد جدیدی را ثبت نمائید.</p>
</div>
