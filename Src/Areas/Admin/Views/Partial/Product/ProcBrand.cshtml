<script id="procBrandSource" type="text/x-handlebars-template">
    {{#each list}}
    <tr role="row">
        <td>
            <div class="media">
                <div class="media-left">
                    <img src="Files/ProcBrand/{{ID}}.jpg?v={{getDate}}" style="width: 70px; height: 70px;" class="img-circle" alt="{{Title}}">
                </div>
                <div class="media-body valign-middle max-width">
                    <h6 class="media-heading text-blue-700 text-bold" lang="en">{{Title}}</h6>
                </div>
            </div>
        </td>
        <td class="text-center">
            {{#if AssignCount}}
            <span class="label label-rounded label-warning">
                {{AssignCount}}
            </span>
            {{/if}}
        </td>
        <td class="text-center">
            <ul class="icons-list">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-menu"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a id="addEdit" data-id="{{ID}}" data-title="{{Title}}" data-toggle="modal" data-target="#addEditBrand" class="text-blue-800"><i class="icon-pencil"></i> ویرایش</a></li>
                        <li><a id="del" data-id="{{ID}}" data-count="{{AssignCount}}" class="text-danger-800"><i class="icon-bin"></i>حذف</a></li>
                    </ul>
                </li>
            </ul>
        </td>
    </tr>
    {{/each}}
</script>

<div id="dataTable">
    <table class="table datatable" id="TblProcBrand">
        <thead>
            <tr>
                <th>عنوان</th>
                <th class="text-center">تعداد اختصاص</th>
                <th class="text-center">عملیات</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<div id="no-records" class="text-center hidden">
    <div class="icon-object no-border">
        <img class="img-responsive" src="~/Areas/Admin/Content/Images/notFound.png" title="notDataFound" />
    </div>
    <h5 class="text-semibold">متاسفانه رکوردی یافت نشد!</h5>
    <p class="mb-15">داده‌ای برای نمایش وجود ندارد می‌توانید از طریق دکمه ثبت مورد جدیدی را ثبت نمائید.</p>
</div>

<div id="addEditBrand" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h5 class="modal-title">افزودن برند</h5>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="FrmProcBrand">
                    <fieldset class="content-group col-lg-12">
                        <div class="form-group mb-40">
                            <input type="hidden" id="ID" name="ID" value="-1" />
                            <label class="control-label title col-lg-3">تصویر</label>
                            <div class="col-lg-4" id="fileupload">
                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <div class="fileupload-new thumbnail">
                                        <img id="DemoBrand" src="~/Areas/Admin/Content/Images/demoUpload.jpg" />
                                    </div>
                                    <div id="btns">
                                        <div class="fileupload-preview fileupload-exists thumbnail"></div>
                                        <div class="fileupload-btn">
                                            <span class="btn btn-file btn-block bg-slate"><span class="fileupload-new" id="DemoBrandBtn">انتخاب</span><span class="fileupload-exists">تغییر</span><input type="file" name="Image" id="Image" /></span>
                                            <a href="#" class="btn btn-default btn-block mt-5 fileupload-exists" data-dismiss="fileupload">حذف</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-9 col-lg-offset-3">
                                <span class="validation-error-label field-validation-valid mt-15" data-valmsg-for="Image" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label title col-lg-3">عنوان</label>
                            <div class="col-lg-9">
                                <input type="text" name="Title" id="Title" class="form-control maxlength" maxlength="50" autocomplete="off">
                                <span class="validation-error-label field-validation-valid mt-15" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-link text-grey-300" data-dismiss="modal"> بی خیال</button>
                <button id="btnAddEdit" class="btn bg-green-800"><span class="ladda-label">ثبت</span></button>
            </div>
        </div>
    </div>
</div>
