@model  Src.Models.ViewData.Table.Page.ViewTbl_Page
<form id="FrmPage">
    <div class="panel panel-flat">
        <div class="panel-body">
            @Html.HiddenFor(item => item.ID)
            <div class="form-group col-lg-12">
                <label class="control-label title col-lg-2 col-xs-12 mt-sm-5">عنوان</label>
                <div class="col-lg-7 col-xs-12">
                    @Html.TextBoxFor(item => item.Title, new
                    {
                        @class = "form-control maxlength",
                                                              autocomplete = "off",
                                                              maxlength = "50"
                    })
                    @Html.ValidationMessageFor(item => item.Title, "", new { @class = "validation-error-label" })
                </div>
            </div>
            <div class="form-group col-lg-12">
                <label class="control-label title col-lg-2 col-xs-12 mt-sm-5">لینک</label>
                <div class="col-lg-5 col-xs-10" style="padding-left:0">
                    @Html.TextBoxFor(item => item.Link, new
                    {
                        @class = "form-control maxlength text-left",
                                                              autocomplete = "off",
                                                              maxlength = "50",
                                                              dir = "ltr",
                                                              lang = "en"
                    })
                    @Html.ValidationMessageFor(item => item.Link, "", new { @class = "validation-error-label" })
                </div>
                <span class="col-lg-2 col-xs-2 text-right pt-10" style="height:38px;padding-right:0" dir="ltr">
                    asiaLaptop.com/page/
                </span>
            </div>
            <div class="form-group col-lg-12">
                <label class="control-label title col-lg-2 col-xs-12 mt-sm-5">توضیحات سئو</label>
                <div class="col-lg-7 col-xs-12">
                    @Html.TextAreaFor(item => item.SeoDesc, new
                    {
                        @class = "form-control maxlength",
                                                                    autocomplete = "off",
                                                                    maxlength = "300"
                    })
                </div>
            </div>
            <div class="form-group col-lg-12">
                <label class="control-label title col-lg-2 col-xs-12 mt-sm-5">متن</label>
                <div class="col-lg-12 col-xs-12">
                    @Html.TextAreaFor(item => item.Body, new
                    {
                        @class = "form-control summernote",
                                                              autocomplete = "off"
                    })
                    @Html.ValidationMessageFor(item => item.Body, "", new { @class = "validation-error-label" })
                </div>
            </div>
            <div class="form-group col-lg-12">
                <label class="control-label title col-lg-2 col-xs-12 mt-sm-5">ویژگی های مهم</label>
                <div class="col-lg-7 col-xs-12">
                    @Html.TextBoxFor(item => item.Keywords, new
                    {
                        @class = "form-control tokenfield maxlength",
                                                                 maxlength = "300"
                    })
                </div>
            </div>
            <div class="form-group col-lg-12">
                <label class="text-semibold title col-lg-2 col-xs-12">وضعیت</label>
                <div class="col-lg-4 col-xs-12">
                    <label>نمایش</label>
                    <label class="ix-input-swich">
                        @Html.CheckBoxFor(item => item.Status, new { @class = "cSwitch" })
                    </label>
                    <label class="ml-10">عدم نمایش</label>
                </div>
            </div>
        </div>
    </div>
</form>
