<script id="topOrderSource" type="text/x-handlebars-template">
    {{#each list}}
    <tr role="row">
        <td class="text-center"><a class="text-blue-700" onclick="pageLoad('/Admin/Order/AddEdit/{{ID}}','ویرایش سفارش','orderList')">{{TrackingCode}}</a></td>
        <td class="text-center">{{SubmitDate}}</td>
        <td class="text-center text-info">{{CustName}}</td>
        <td class="text-center">
            {{#if PaymentStatus}}
            <span class="label label-rounded label-icon label-success"><i class="icon-checkmark3"></i></span>
            {{else}}
            <span class="label label-rounded label-icon label-danger"><i class="icon-cross2"></i></span>
            {{/if}}
        </td>
        <td class="text-center"><span class="label label-rounded bg-slate">{{StatusName}}</span></td>
        <td class="text-center"><a class="text-grey-300" onclick="pageLoad('/Admin/Order/Detail/{{ID}}','جزئیات سفارش ALO-{{ID}}','orderList')"><i class="icon-chevron-left"></i></a></td>
    </tr>
    {{/each}}
</script>

<div class="panel panel-flat">
    <div class="panel-heading">
        <h3 class="panel-title text-grey-400">
            آخرین سفارش ها
            <a onclick="pageLoad('/Admin/Order', 'لیست سفارش ها','orderList')" data-target="orderList" class="btn bg-slate btn-xs text-white heading-btn pull-right legitRipple">همه سفارش ها</a>
        </h3>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-hover" id="tbl-TopOrder">
                <thead>
                    <tr>
                        <th class="text-center">کد پیگیری</th>
                        <th class="text-center">تاریخ ثبت</th>
                        <th class="text-center">مشتری</th>
                        <th class="text-center">پرداخت</th>
                        <th class="text-center">وضعیت</th>
                        <th class="text-center">جزئیات</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>