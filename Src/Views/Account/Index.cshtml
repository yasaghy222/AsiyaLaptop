
@{
    ViewBag.Title = "لپتاپ آسیا";
    Layout = "~/Views/Sheared/_Layout_Secondery.cshtml";
}

@section MetaTags{
    <meta name="description" content="@ViewBag.Title">
    <meta name="keywords" content="shop, e-commerce, modern, flat style, responsive, online store, business, mobile, blog, bootstrap 4, html5, Css3, jquery, js, gallery, slider, touch, creative, clean">
    <meta name="author" content="T.Yasaghi">
}

<div class="col-md-6">
    <form class="card" method="post">
        <div class="card-body">
            <h4 class="margin-bottom-1x">ورود</h4>
            <div class="form-group input-group">
                <label for="PhoneNumber">شماره موبایل</label>
                <input class="form-control" name="PhoneNumber" type="number" placeholder="شماره موبایل خود را وارد نمایید" required><span class="input-group-addon"><i class="icon-smartphone"></i></span>
            </div>
            <div class="form-group input-group">
                <label for="Password">رمز عبور</label>
                <input class="form-control" name="Password" type="password" placeholder="رمز عبور خود را وارد نمایید" required><span class="input-group-addon"><i class="icon-lock"></i></span>
            </div>
            <div class="d-flex flex-wrap justify-content-between padding-bottom-1x">
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input" type="checkbox" id="remember_me" checked>
                    <label class="custom-control-label" for="remember_me"><span class="mr-2">مرا بخاطر داشته باش</span></label>
                </div><a class="navi-link" href="/Account/ResetPass">رمز عبور خود را فراموش کرده ام</a>
            </div>
            <div class="text-center text-sm-right">
                <button class="btn btn-primary margin-bottom-none" type="submit">ورود</button>
            </div>
        </div>
    </form>
</div>
<div class="col-md-6 text-right">
    <div class="padding-top-3x hidden-md-up"></div>
    <h3 class="margin-bottom-1x">کاربر جدید هستید؟ ثبت نام کنید</h3>
    <form class="row" method="post">
        <div class="col-sm-12">
            <div class="form-group">
                <label for="Name">نام</label>
                <input class="form-control" type="text" id="Name" required>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                <label for="PhoneNumber">شماره موبایل</label>
                <input class="form-control" type="number" id="PhoneNumber" required>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                <label for="Password">رمز عبور</label>
                <input class="form-control" type="text" id="Password" required>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="d-flex flex-wrap justify-content-between padding-bottom-1x">
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input" type="checkbox" id="term_cond_acc" checked="">
                    <label class="custom-control-label" for="term_cond_acc"><a class="ml-1 mr-2" href="">حریم خصوصی</a> و <a class="ml-1 mr-1" href="">قوانین</a> فروشگاه لپتاپ آسیا را مطالعه کرده و با کلیه موارد آن موافقم.</label>
                </div>
            </div>
        </div>
        <div class="col-12 text-center text-sm-right">
            <button class="btn btn-primary margin-bottom-none" type="submit">ثبت نام</button>
        </div>
    </form>
</div>